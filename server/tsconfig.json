{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@config/*": ["src/config/*"],
        "@containers/*": ["src/containers/*"],
        "@controllers/*": ["src/controllers/*"],
        "@helpers/*": ["src/helpers/*"],
        "@middlewares/*": ["src/middlewares/*"],
        "@models/*": ["src/models/*"],
        "@services/*": ["src/services/*"],
        "@repositories/*": ["src/repositories/*"],
        "@routes/*": ["src/routes/*"],
        "@types/*": ["src/@types/*"]
      }  
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  